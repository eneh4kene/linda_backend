# Database
# Local development:
# DATABASE_URL="postgresql://linda:linda@localhost:5432/linda"
# Production (Neon - update with your credentials):
DATABASE_URL="postgresql://user:password@endpoint.region.aws.neon.tech/dbname?sslmode=require"

# Redis
# Local development:
# REDIS_URL="redis://localhost:6379"
# Production (Upstash - use standard Redis URL, not REST):
REDIS_URL="rediss://default:password@endpoint.upstash.io:6379"

# Upstash REST API (optional, not currently used)
UPSTASH_REDIS_REST_URL="https://your-endpoint.upstash.io"
UPSTASH_REDIS_REST_TOKEN="your-rest-token"

# Retell AI
RETELL_API_KEY="your-retell-api-key"
RETELL_AGENT_ID="agent_xxxxxxxxxxxx"
RETELL_PHONE_NUMBER="+44xxxxxxxxxx"
RETELL_WEBHOOK_SECRET="your-webhook-secret"

# Anthropic (Claude)
ANTHROPIC_API_KEY="sk-ant-xxxxxxxxxxxx"

# Vercel Blob
BLOB_READ_WRITE_TOKEN="vercel_blob_xxxxxxxxxxxx"

# Server
PORT=3000
NODE_ENV="development"
API_BASE_URL="http://localhost:3000"

# Authentication
JWT_SECRET="your-super-secret-jwt-key-minimum-32-characters-long-change-in-production"
JWT_EXPIRES_IN="7d"

# Frontend (for CORS)
FRONTEND_URL="http://localhost:3001"
